#include<stdio.h>
int main()
{
int num,isprime=1;
printf ("Enter a Number");
scanf("%d",&num);
if(num<=1)
{
is prime=0;
}
else{
for(int i=2;i<=num/2;i++)
{
if(num%i==0)
{
is prime =0;
break;
}
}
}
if (isprime)
{
printf ("%d is a prime number.\n",num);
